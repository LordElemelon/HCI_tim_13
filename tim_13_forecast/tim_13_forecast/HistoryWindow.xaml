<Window x:Class="tim_13_forecast.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tim_13_forecast"
        mc:Ignorable="d"
        Title="History" Height="182.143" Width="265.143">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="124*"/>
        </Grid.ColumnDefinitions>
        <ListView Name="History" HorizontalAlignment="Left" Height="131" Margin="10,10,0,0" VerticalAlignment="Top" Width="237" SelectionChanged="History_SelectionChanged_1" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="City" Width="100" DisplayMemberBinding="{Binding Path=City}"/>
                    <GridViewColumn Header="Degree" Width="70" DisplayMemberBinding="{Binding Path=Degree}"/>
                    <GridViewColumn Width="70" Header=""  DisplayMemberBinding="{Binding Path=Picture}"/>

                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>

